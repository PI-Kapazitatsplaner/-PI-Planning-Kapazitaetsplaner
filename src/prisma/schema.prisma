generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  sub                  String  @id //The subject Presentet by Keycloak
  preferencesWhiteMode Boolean @default(false)
  productivityDecimal  Int     @default(1)
  abwesenheiten Abwesenheit[]
  standardAbwesenheiten Int[] 
}

model Abwesenheit{
  id Int @id @default(autoincrement())
  date DateTime
  typ AbwesenheitsTyp @default(abwesend)
  user User @relation(fields: [userSub], references: [sub])
  userSub String
  @@unique([userSub, date])
}

enum AbwesenheitsTyp {
  anwesend //Wirb für anwesenheiten an Feiertagen benötigt
  abwesend
  halbAbwesend
}

model Pi {
  id          Int @id @default(autoincrement())
  year        String
  iteration   String
  planungVon  DateTime?
  planungBis  DateTime?
  sprint      Sprint[]
  @@unique(fields: [year, iteration], name: "piKey")
}

model Sprint {
  id  Int      @id @default(autoincrement())
  von DateTime
  bis DateTime
  pi  Pi @relation(fields: [piId], references: [id])
  piId Int
  sprintNumber Int?
  @@unique(fields: [piId, sprintNumber], name: "sprintKey")
}
